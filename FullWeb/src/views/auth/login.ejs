<html>

<link rel="stylesheet" href="/css/bootstrap.css">
<script src="/js/bootstrap.js"></script>

<body>
	<div align="center">
		<div class="col-sm-4 col-sm-offset-4">
			<div class="card centered">
				<h4 class="card-title text-center">Login</h4>
				<hr>
				<p class="text-success text-center"><%= (!!locals.message)?message:'' %><br /></p>
				<form name="signup" action="/auth/login" method="post">
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"> <i class="fa fa-user"></i> </span>
							</div>
							<input name="username" id="username" class="form-control" placeholder="Username"
								type="text">
						</div> <!-- input-group.// -->
					</div> <!-- form-group// -->
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
							</div>
							<input name="password" id="password" class="form-control" placeholder="******"
								type="password">
						</div> <!-- input-group.// -->
					</div> <!-- form-group// -->
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">Login</button>
					</div> <!-- form-group// -->
					<a href="/auth/signup">Signup</a>
				</form>
				</article>
			</div> <!-- card.// -->
		</div>
	</div>
</body>

</html>